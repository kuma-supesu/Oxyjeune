{% extends "base.html.twig" %}
{% block body %}
    <div class="container-fluid mt-5">
        <div class="row text-center">
            {% if is_granted('ROLE_ADMIN') %}
            <div class="col-3">
                <a class="btn btn-secondary btn text-center" href="{{ path("userListe") }}" role="button">Retour à la liste</a>
            </div>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') and user.email is not same as(app.user.email)%}
                <div class="col-3">
                    <a class="btn-success btn" href="{{ path("userExist") }}" role="button">Changer mot de passe</a>
                </div>
            {% else %}
                <div class="col-3">
                    <a class="btn-success btn" href="{{ path("addToken", {slug: user.email}) }}" role="button">Changer mot de passe</a>
                </div>
            {% endif %}
            <div class="col-3">
                    <a class="btn-warning btn" href="{{ path("userModification", {slug: user.id}) }}" role="button">Modifier</a>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
                <div class="col-3">
                    <a class="btn-danger btn" href="{{ path("userSuppression", {slug: user.id}) }}" role="button">Supprimer</a>
                </div>
            {% endif %}
        </div>
    </div>
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-12">
                <table class="table table-striped table-dark" id="table" >
                    <thead>
                    <tr>
                        <th class="w-30" scope="col" data-sortable="true">Nom</th>
                        <th class="w-30" scope="col" data-sortable="true">E-mail</th>
                        <th class="w-20" scope="col" data-sortable="true">Type de compte</th>
                    </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td> {{ user.nomComplet }} </td>
                            <td> {{ user.email }} </td>
                            <td> {{ user.role|replace({'ROLE_USER': 'Bénévole', 'ROLE_ADMIN': 'Administrateur'}) }} </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/bootstrap-table@1.15.5/dist/bootstrap-table.min.js"></script>
{% endblock %}