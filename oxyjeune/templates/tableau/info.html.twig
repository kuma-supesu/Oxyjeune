{% extends "base.html.twig" %}
{% block body %}
    <div class="container-fluid mt-5">
        <div class="row text-center">
            <div class="col-3">
                <a class="btn btn-secondary btn text-center" href="{{ path("tableauListe") }}" role="button">Retour à la liste</a>
            </div>
            <div class="col-3">
                <a href="{{ path("tableauLigneInsertion", {tableau: tableau.id }) }}"><button class="btn-success btn">Insérer une ligne</button></a>
            </div>
            <div class="col-3">
                <a href="{{ path("tableauModification", {tableau: tableau.id }) }}"><button class="btn-warning btn">Modifier le tableau</button></a>
            </div>
            <div class="col-3">
                <a href="{{ path("tableauSuppression", {tableau: tableau.id}) }}"><button class="btn-danger btn">Supprimer le tableau</button></a>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <h2 class="text-muted">Tableau | {{ tableau.classeur|upper }}</h2>
                <table class="table table-striped table-dark" id="table" data-toggle="table" data-search="true" >
                    <thead>
                    <tr>
                        <th class="w-5" scope="col" data-sortable="true">#</th>
                        <th class="w-25" scope="col" data-sortable="true">Noms</th>
                        <th class="w-20" scope="col" data-sortable="true">Paiement en</th>
                        <th class="w-10" scope="col" data-sortable="true">Payée en totalité</th>
                        <th class="w-25 text-center" scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for list in tableau.tableauLignes|sort((a, b) => a.nom <=> b.nom) %}
                    <tr>
                        <th scope="row">{{loop.index}}</th>
                        <td> {{ list.nom }} </td>
                        <td> {{ list.paiementXFois}} fois </td>
                        <td> {% if list.payee is same as(true) %}
                                Oui
                            {% else %}
                                Non
                            {% endif %}
                        </td>
                        <td><a href="{{ path("tableauLigneInfo", {tableau: tableau.id, ligne: list.id }) }}"><button class="btn-warning btn">Voir les détails</button></a></td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
    {% block javascripts %}
        {{ parent() }}
        <script src="https://unpkg.com/bootstrap-table@1.15.5/dist/bootstrap-table.min.js"></script>
    {% endblock %}