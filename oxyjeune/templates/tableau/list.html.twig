    <a class="btn btn-secondary m-3 text-center" href="{{ path("index") }}" role="button">Retour Ã  l'accueil</a>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ url("tableauCreation") }}"><button class="btn-dark btn">Creer un nouveau Tableau</button></a>
    {% endif %}
    {% for list in tableau|sort((a, b) => a.annee <=> b.annee)|reverse %}
