{% extends "base.html.twig" %}
{% block body %}
    <a class="btn btn-secondary btn text-center" href="{{ path("tableauInfo", {tableau: tableau }) }}" role="button">Retour au tableau</a>
    {{ form_start(form) }}
    <div class="d-flex justify-content-center mt-5">
        <div class="card" style="width: 18rem;">
            <div class="card-body text-center">
                <h5 class="card-title">Inserer une ligne</h5>
                <h6 class="card-subtitle mb-2 text-muted">Nom complet</h6>
                <p class="card-text">{{ form_widget(form.nom) }}</p>
                <h6 class="card-subtitle mb-2 text-muted">Nombre de paiement</h6>
                <p class="card-text">{{ form_widget(form.paiementXFois) }}</p>
                <h6 class="card-subtitle mb-2 text-muted">Inscription pay√©e</h6>
                <p class="card-text">{{ form_widget(form.payee) }}</p>
                <button class="btn btn-secondary" type="submit" id="tableauLigne_save" name="tableauLigne[save]">Ajouter</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}