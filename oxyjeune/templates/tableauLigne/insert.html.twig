{% extends "base.html.twig" %}
{% block body %}
    <a class="btn btn-secondary btn text-center" href="{{ path("tableauInfo", {tableau: tableau }) }}" role="button">Retour au tableau</a>
    {{ form_start(form) }}
    {{ form_row(form.nom) }}
    {{ form_row(form.moyenPaiement) }}
    {{ form_row(form.paiementXFois) }}
    {{ form_row(form.payee) }}
    <button class="btn btn-secondary" type="submit" id="tableauLigne_save" name="tableauLigne[save]">Ajouter</button>
    {{ form_end(form) }}
{% endblock %}