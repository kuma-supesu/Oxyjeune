{% extends "base.html.twig" %}
{% block body %}
    <div class="container mt-5">
        <div class="row text-center">
            <div class="col-3">
                <a class="btn btn-secondary btn text-center" href="{{ path("tableauInfo", {tableau: tableau }) }}" role="button">Retour au tableau</a>
            </div>
            <div class="col-3">
                <a href="{{ path("tableauPaiementInsertion", {ligne: data.id }) }}"><button class="btn-success btn">Ajouter un versement</button></a>
            </div>
            <div class="col-3">
                <a href="{{ path("tableauLigneModification", {tableau: tableau, ligne: data.id}) }}"><button class="btn-warning btn">Modifier la ligne</button></a>
            </div>
            <div class="col-3">
                <a href="{{ path("tableauLigneSuppression", {tableau: tableau, ligne: data.id}) }}"><button class="btn-danger btn">Supprimer la ligne</button></a>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <h2 class="text-muted"> Ligne | {{ data.Nom|upper }} </h2>
                <table class="table table-striped table-dark" id="table" data-toggle="table"  >
                    <thead>
                    <tr>
                        <th class="w-25" scope="col">Noms</th>
                        <th class="w-25" scope="col">Moyen Paiement</th>
                        <th class="w-25" scope="col">Paiement en</th>
                        <th class="w-25" scope="col">Payée</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td> {{ data.nom }} </td>
                        <td> {{ data.moyenPaiement|capitalize }} </td>
                        <td> {{ data.paiementXFois}} fois </td>
                        <td> {% if data.payee is same as(true) %}
                                Oui
                            {% else %}
                                Non
                            {% endif %}
                        </td>
                    </tr>
                    </tbody>
                </table>

                <table class="table table-striped table-dark mt-5" id="table" data-toggle="table">
                    <thead>
                    <tr>
                        <th class="w-5" scope="col"data-sortable="true">#</th>
                        <th class="w-35" scope="col"data-sortable="true">Date</th>
                        <th class="w-35" scope="col"data-sortable="true">Montant</th>
                        <th class="w-25 text-center" scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for list in data.tableauPaiements|sort((a, b) => a.dateVersement <=> b.dateVersement) %}
                        <tr>
                            <th scope="row">{{loop.index}}</th>
                            <td> {{ list.dateVersement|format_date('long',  locale='fr') }} </td>
                            <td> {{ list.sommeVersement }} €</td>
                            <td><a href="{{ path("tableauPaiementSuppression", {tableau: tableau, ligne: data.id, paiement: list.id }) }}"><button class="btn-warning btn">Supprimer le paiement</button></a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
    {% block javascripts %}
        {{ parent() }}
        <script src="https://unpkg.com/bootstrap-table@1.15.5/dist/bootstrap-table.min.js"></script>
    {% endblock %}