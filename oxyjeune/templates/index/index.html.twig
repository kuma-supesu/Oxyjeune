{% extends "base.html.twig" %}
{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ url("planningCreation") }}"><button class="btn-dark btn-lg btn">Creer un nouveau Planning</button></a>
        <a href="{{ url("tableauCreation") }}"><button class="btn-dark btn-lg btn">Creer un nouveau Tableau</button></a>
        <a href="{{ url("app_register") }}"><button class="btn-dark btn-lg btn">Creer un nouvel utilisateur</button></a>
        <a href="{{ url("tableauListe") }}"><button class="btn-info btn-lg btn">Tableaux</button></a>
    {% endif %}
    <a href="{{ url("planningListe") }}"><button class="btn-info btn-lg btn">Planning des évènements</button></a>
    {% for message in app.flashes('success') %}
        <div class="flash-success">
            <H2 class="text-muted">{{ message }} {{ app.user.nomComplet }}</H2>
        </div>
    {% endfor %}
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h3 class="text-primary text-center">Mes participations</h3>
            </div>
            <div class="row row-cols-1 row-cols-md-4">
                {% for heure in heures|sort((a, b) => a.journee.date <=> b.journee.date)|reverse %}
                        <div class="card-group">
                            <div class="card-body d-flex flex-column align-items-center">
                                <h4 class="card-title text-muted">{{ heure.journee.planning.event }}</h4>
                                <h5 class="card-subtitle mb-2 text-muted">{{ heure.journee.date|format_date("long", locale="fr") }}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">{{ heure.plageHoraire|format_time("short", locale="fr") }} - {{ heure.plageHoraire|date_modify("+" ~ heure.journee.dureeHeure ~ " Hours " ~ heure.journee.dureeMinute ~ " min")|format_time("short", locale="fr") }}</h6>
                                <div class="mt-auto ">
                                    <a href="{{ path("planningInfo", {slug: heure.journee.planning.id }) }}"><button class="btn-info btn-lg btn mt-auto align-items-center">Voir</button></a>
                                </div>
                            </div>
                        </div>
                {% endfor %}
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
    {% block javascripts %}
        {{ parent() }}
    {% endblock %}
{% endblock %}