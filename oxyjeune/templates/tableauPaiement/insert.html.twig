{% extends "base.html.twig" %}
{% block body %}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    <a class="btn btn-secondary m-3 text-center" href="{{ path("tableauLigneInfo", {tableau: tableau, ligne: ligne }) }}" role="button"><i class="fas fa-arrow-left"></i> Retour Ã  la ligne</a>
    <form method="post">
        <div class="d-flex justify-content-center">
            <div class="card" style="width: 18rem;">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Inserer un paiement</h5>
                    <h6 class="card-subtitle text-muted">Date du versement</h6>
                    <p class="card-text">{{ form_widget(form.dateVersement) }}</p>
                    <h6 class="card-subtitle text-muted">Methode de paiement</h6>
                    <p class="card-text">{{ form_widget(form.moyenPaiement) }}</p>
                    <h6 class="card-subtitle text-muted">Montant du versement</h6>
                    <p class="card-text">{{ form_widget(form.sommeVersement) }}</p>
                </div>
                <button class="btn btn-success" type="submit" id="tableauPaiement_save" name="tableauPaiement[save]">Ajouter</button>
            </div>
        </div>
        {{ form_row(form._token) }}
    </form>
{% endblock %}