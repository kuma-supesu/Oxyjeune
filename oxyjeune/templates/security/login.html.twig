{% extends "base.html.twig" %}
{% block body %}
    {% if not app.user %}
        <div class="container mt-5 ">
            <div class="row">
                <div class="col-4"></div>
                <div class="col-4">
                    <a href="https://jstadelmann.fr/">Retour</a>
                </div>
                <div class="col-4"></div>
            </div>
            <div class="row mb-10">
                <div class="col-4"></div>
                <div class="col-4">
                    <div class="card">
                            <form class="form-signin" action="{{ path('app_login') }}" method="post">
                                                               <div class="card-header">
                                    <h3 class="text-primary text-center">Connexion</h3>
                                </div>
                                <div class="card-body">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}
                                <label for="inputEmail" class="sr-only">Email</label>
                                <input type="email" name="_username" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                                <label for="inputPassword" class="sr-only">Mot de passe</label>
                                <input type="password" name="_password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                                    <input type="hidden" name="_csrf_token"
                                           value="{{ csrf_token('authenticate') }}"
                                    >
                                <button class="btn btn-lg btn-primary btn-block mt-1" type="submit">Se connecter</button>
                                </div>
                                <a class="btn btn-link text-center" style="width: 100%" href="{{ path("userExist") }}" role="button">Mot de passe oubli√©</a>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-4"></div>
            </div>
    {% endif %}
{% endblock %}
